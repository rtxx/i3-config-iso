## Base16is Breeze Dark theme
## author : rtxx
general {
    interval = 5
	output_format = "i3bar"
	colors = true
	color_good = "#27ae60"
	color_bad = "#da4453"
    color_degraded = "#fdbc4b"
}

load {
  format = "⚙️ %5min"
}

cpu_temperature 0 {
  path = "/sys/class/thermal/thermal_zone0/temp"
  format = "🌡️ %degrees°C"
}

memory {
  format = "🐏 %used/%total"
}

disk "/" {
  format = "📁 / %free"
}

#disk "/home" {
#  format = "~ %free"
#}



ethernet enp0s25 {
  format_up = "🌐 E: %ip"
  format_down = ""
}

wireless wlp3s0 {
  format_up = "🌐 W: %ip"
  format_down = ""
}

time {
  format = "⌚ %d/%m/%y %H:%M:%S"
}

external_script {
  cache_timeout = 600
  format = "{output}"
  script_path = "~/.config/i3/config.d/scripts/check-updates -b"
  on_click 1 = "exec i3-sensible-terminal -name termfloat -hold -e yay"
  on_click 3 = refresh
}

order += "external_script"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "disk /"
order += "disk /home"
order += "wireless wlp3s0"
order += "ethernet enp0s25"
order += "time"
