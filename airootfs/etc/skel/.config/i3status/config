# You can use these variables anywhere in the i3status configuration file.

general {
       color_good = "#8BD649"
       color_bad = "#EC5F67"
       color_degraded = "#FFCC00"
}

load {
  format = "⚙️ %5min"
}

cpu_temperature 0 {
  path = "/sys/class/thermal/thermal_zone0/temp"
  format = "🌡️ %degrees°C"
}

memory {
  format = "🐏 %used/%total"
}

disk "/" {
  format = "📁 / %free"
}

#disk "/home" {
#  format = "~ %free"
#}



ethernet enp0s25 {
  format_up = "🌐 E: %ip"
  format_down = ""
}

wireless wlp3s0 {
  format_up = "🌐 W: %ip"
  format_down = ""
}

time {
  format = "⌚ %d/%m/%y %H:%M:%S"
}

